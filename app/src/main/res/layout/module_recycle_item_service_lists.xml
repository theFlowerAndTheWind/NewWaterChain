<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img"
        android:layout_width="294px"
        android:layout_height="190px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="40px"
        android:layout_marginBottom="40px"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35px"
        android:layout_marginTop="42px"
        android:layout_toRightOf="@+id/img"
        android:text="酒店布草洗涤"
        android:textColor="@color/text_black"
        android:textSize="22px" />

    <TextView
        android:id="@+id/tv_serivces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_service_title"
        android:layout_marginLeft="35px"
        android:layout_marginTop="21px"
        android:layout_marginRight="40px"
        android:layout_toRightOf="@+id/img"
        android:text="专业技术，节水95%，不用洗涤剂，不产生污染，已经在推广"
        android:textColor="@color/text_gray"
        android:textSize="18px" />

    <Button
        android:id="@+id/btn_see_detail"
        android:layout_width="200px"
        android:layout_height="50px"
        android:layout_below="@+id/tv_serivces"
        android:layout_marginLeft="35px"
        android:layout_marginTop="30px"
        android:layout_toRightOf="@+id/img"
        android:background="@drawable/btn_blue_bg_selector"
        android:text="立即下单"
        android:textColor="@color/white"
        android:textSize="22px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:layout_below="@id/img"
        android:background="@color/divider_gray" />

</RelativeLayout>
