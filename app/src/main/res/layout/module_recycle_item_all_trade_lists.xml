<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/PaddinLeftRight"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:paddingTop="25px"
        android:paddingBottom="25px">

        <TextView
            android:id="@+id/tv_action_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="贡献"
            android:textColor="@color/primary_red"
            android:textSize="@dimen/text_size_edt" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_action_type"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/tv_action_type"
            android:text="水方/节水指标"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_edt" />


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="150px"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_action_type"
            android:layout_alignParentRight="true"
            android:background="@drawable/blue_border_bg_shape"
            android:paddingLeft="30px"
            android:paddingTop="5px"
            android:paddingRight="30px"
            android:paddingBottom="5px"
            android:text="撤销"
            android:textColor="@color/primary_blue"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_status"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_action_type"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="时间"
                    android:textColor="@color/text_gray"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:text="单价"
                    android:textColor="@color/text_gray"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="委托量（水方）"
                    android:textColor="@color/text_gray"
                    android:textSize="24px" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_add_time"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="2019-01-01 00:00"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="2.50/T"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:id="@+id/tv_old_total"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="300.00"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll2"
                android:layout_marginTop="15px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="实际成交（水方）"
                    android:textColor="@color/text_gray"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:text="手续费"
                    android:textColor="@color/text_gray"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:textColor="@color/text_gray"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_deal_total"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="2.50/T"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="300.00"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/module_include_divider" />
</LinearLayout>


