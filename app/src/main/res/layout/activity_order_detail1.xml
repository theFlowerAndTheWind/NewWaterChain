<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/module_include_title_bar" />
    <!--<FrameLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/space_gray"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <!--其中tv_status需隐藏-->
            <include layout="@layout/module_recycle_item_order_lists" />

            <LinearLayout
                android:id="@+id/ll_count"
                style="@style/PaddinLeftRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commit_btn_height"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="数量"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_edt" />
            </LinearLayout>

            <include
                android:id="@+id/space1"
                layout="@layout/module_include_gray_space" />


            <LinearLayout
                android:id="@+id/ll_order_sn"
                style="@style/PaddinLeftRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commit_btn_height"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="订单编号"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:id="@+id/tv_order_sn"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_edt" />
            </LinearLayout>

            <include
                android:id="@+id/divider_pay_cate"
                layout="@layout/module_include_divider" />

            <LinearLayout
                android:id="@+id/ll_status_view"
                style="@style/PaddinLeftRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commit_btn_height"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="订单状态"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:id="@+id/tv_status_view"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_edt" />
            </LinearLayout>

            <include
                android:id="@+id/divider_pay_type"
                layout="@layout/module_include_divider" />

            <LinearLayout
                android:id="@+id/ll_add_time"
                style="@style/PaddinLeftRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commit_btn_height"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="下单时间"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:id="@+id/tv_add_time"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_edt" />
            </LinearLayout>

            <include
                android:id="@+id/space2"
                layout="@layout/module_include_gray_space" />


            <LinearLayout
                android:id="@+id/ll_pay_cate"
                style="@style/PaddinLeftRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commit_btn_height"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="支付方式"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:id="@+id/tv_pay_cate"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_edt" />
            </LinearLayout>

            <include
                android:id="@+id/divider_contact_name"
                layout="@layout/module_include_divider" />

            <LinearLayout
                android:id="@+id/ll_pay_price"
                style="@style/PaddinLeftRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commit_btn_height"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="应支付金额"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:id="@+id/tv_pay_price"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_edt" />
            </LinearLayout>

            <include
                android:id="@+id/divider_contact_tel"
                layout="@layout/module_include_divider" />

            <LinearLayout
                android:id="@+id/ll_pay_jsl"
                style="@style/PaddinLeftRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commit_btn_height"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="使用水方"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:id="@+id/tv_pay_jsl"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_edt" />
            </LinearLayout>

            <include
                android:id="@+id/divider_address"
                layout="@layout/module_include_divider" />

            <LinearLayout
                android:id="@+id/ll_add_time1"
                style="@style/PaddinLeftRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commit_btn_height"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="下单时间"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_edt" />

                <TextView
                    android:id="@+id/tv_add_time1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_edt" />
            </LinearLayout>

            <include
                android:id="@+id/divider_express"
                layout="@layout/module_include_divider" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>