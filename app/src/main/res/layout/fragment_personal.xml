<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_user_detail"
            style="@style/PaddinLeftRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="51px"
            android:paddingBottom="40px">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginRight="@dimen/view_space_edt_vertical"/>

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_avatar"
                android:text="********"
                android:textColor="@color/text_black"
                android:textSize="32px" />

            <ImageView
                android:id="@+id/img_go_user_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_go_to" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_gray" />

        <RelativeLayout
            android:id="@+id/relative_account_detail"
            style="@style/PaddinLeftRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commit_btn_height">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/wallet" />

            <TextView
                android:id="@+id/tv_account_detail"
                style="@style/style_txt_confirm_order1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img1"
                android:paddingLeft="26px"
                android:text="我的资产" />

            <ImageView
                android:id="@+id/img_go_account_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_go_to" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_gray" />

        <RelativeLayout
            android:id="@+id/relative_auth_detail"
            style="@style/PaddinLeftRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commit_btn_height">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/laptop"  />

            <TextView
                android:id="@+id/tv_auth_detail"
                style="@style/style_txt_confirm_order1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img2"
                android:paddingLeft="26px"
                android:text="身份认证" />

            <ImageView
                android:id="@+id/img_go_auth_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_go_to" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_gray" />

        <RelativeLayout
            android:id="@+id/relative_trade_lists"
            style="@style/PaddinLeftRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commit_btn_height">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/clock" />

            <TextView
                android:id="@+id/tv_trade_lists"
                style="@style/style_txt_confirm_order1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img3"
                android:paddingLeft="26px"
                android:text="历史委托" />

            <ImageView
                android:id="@+id/img_go_trade_lists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_go_to" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_gray" />

        <RelativeLayout
            android:id="@+id/relative_order_lists"
            style="@style/PaddinLeftRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commit_btn_height">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/drop" />

            <TextView
                android:id="@+id/tv_order_lists"
                style="@style/style_txt_confirm_order1"
                android:layout_centerVertical="true"
                android:paddingLeft="26px"
                android:layout_toRightOf="@+id/img4"
                android:text="洗涤订单" />

            <ImageView
                android:id="@+id/img_go_order_lists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_go_to" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_gray" />

        <RelativeLayout
            android:id="@+id/relative_goods"
            style="@style/PaddinLeftRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commit_btn_height">

            <ImageView
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/refresh" />

            <TextView
                android:id="@+id/tv_goods"
                style="@style/style_txt_confirm_order1"
                android:layout_centerVertical="true"
                android:paddingLeft="26px"
                android:layout_toRightOf="@+id/img5"
                android:text="我的兑换" />

            <ImageView
                android:id="@+id/img_gooods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_go_to" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_gray" />

        <RelativeLayout
            android:id="@+id/relative_sys_msg"
            style="@style/PaddinLeftRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commit_btn_height">

            <ImageView
                android:id="@+id/img6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/speach" />

            <TextView
                android:id="@+id/tv_sys_msg"
                style="@style/style_txt_confirm_order1"
                android:layout_centerVertical="true"
                android:paddingLeft="26px"
                android:layout_toRightOf="@+id/img6"
                android:text="系统消息" />

            <ImageView
                android:id="@+id/img_go_sys_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_go_to" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_gray" />

        <RelativeLayout
            android:id="@+id/relative_change_pass"
            style="@style/PaddinLeftRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commit_btn_height">

            <ImageView
                android:id="@+id/img7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/umbrella" />

            <TextView
                android:id="@+id/tv_change_pass"
                style="@style/style_txt_confirm_order1"
                android:layout_centerVertical="true"
                android:paddingLeft="26px"
                android:layout_toRightOf="@+id/img7"
                android:text="修改密码"/>

            <ImageView
                android:id="@+id/img_go_change_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_go_to" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_gray" />

        <RelativeLayout
            android:id="@+id/relative_about_us"
            style="@style/PaddinLeftRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commit_btn_height">

            <ImageView
                android:id="@+id/img8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/user" />

            <TextView
                android:id="@+id/tv_about_us"
                style="@style/style_txt_confirm_order1"
                android:layout_centerVertical="true"
                android:paddingLeft="26px"
                android:layout_toRightOf="@+id/img8"
                android:text="关于我们"/>

            <ImageView
                android:id="@+id/img_go_about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_go_to" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_gray" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commit_btn_height"
            android:layout_gravity="center_horizontal"
            android:text="版本号V1.0.0"
            android:textColor="@color/text_gray"
            android:textSize="20px" />
    </LinearLayout>

</ScrollView>
