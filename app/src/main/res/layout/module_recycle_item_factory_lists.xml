<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl1"
        style="@style/PaddinLeftRight"
        android:layout_width="match_parent"
        android:layout_height="270px">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_factory_name"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_alignParentBottom="true"
            android:background="#55000000"
            android:gravity="left|center_vertical"
            android:paddingLeft="40px"
            android:text="山东临沂节水洗涤厂"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_edt" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PaddinLeftRight"
        android:layout_below="@+id/rl1"
        android:paddingTop="20px"
        android:paddingBottom="20px">

        <TextView
            android:id="@+id/tv_service_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务范围:"
            android:textColor="@color/text_gray"
            android:textSize="18px" />

        <TextView
            android:id="@+id/tv_serivces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_service_area"
            android:text="业务范围:"
            android:textColor="@color/text_gray"
            android:textSize="18px" />

        <TextView
            android:id="@+id/tv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_serivces"
            android:text="节水95%，专业洗涤"
            android:textColor="@color/text_gray"
            android:textSize="18px" />

        <Button
            android:id="@+id/btn_see_detail"
            android:layout_width="200px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_blue_bg_selector"
            android:text="查看服务选项"
            android:textColor="@color/white"
            android:textSize="22px" />
    </RelativeLayout>
    <View
        android:layout_below="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/divider_gray"/>


</RelativeLayout>
