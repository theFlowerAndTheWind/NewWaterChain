<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/MyPadding"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="400px"
        android:src="@drawable/ic_launcher"/>
    <View
        android:layout_width="@dimen/view_space"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酒店布草洗涤"
            android:textSize="@dimen/middle_btn_text_size"
            android:textColor="@color/black"/>
        <TextView
            style="@style/MarginTopBottom"
            android:layout_below="@id/tv_service_title"
            android:id="@+id/tv_serivces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业技术，节水95%，不用洗涤剂，不产生污染，已经在推广"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_gray"/>
        <Button
            android:id="@+id/btn_see_detail"
            android:layout_width="500px"
            android:layout_height="100px"
            android:background="@drawable/btn_bg_selector"
            android:text="立即下单"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="@dimen/small_btn_text_size"/>
    </RelativeLayout>



</LinearLayout>
