<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20px"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20px"
        android:textStyle="bold"
        android:text="流程介绍"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_weight="1"
                    android:textSize="15px"
                    android:gravity="center"
                    android:textColor="@color/primary_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:background="@drawable/blue_border_bg_conner_shape"
                    android:text="登录账号"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15px"
                    android:background="@drawable/arrow_left"/>
                <Button
                    android:layout_weight="1"
                    android:textSize="15px"
                    android:gravity="center"
                    android:textColor="@color/primary_blue"
                    android:background="@drawable/blue_border_bg_conner_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:text="提交洗涤需求"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15px"
                    android:background="@drawable/arrow_left"/>
                <Button
                    android:layout_weight="1"
                    android:textSize="15px"
                    android:gravity="center"
                    android:textColor="@color/primary_blue"
                    android:background="@drawable/blue_border_bg_conner_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:text="提交订单"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15px"
                    android:background="@drawable/arrow_left"/>
                <Button
                    android:layout_weight="1"
                    android:textSize="15px"
                    android:gravity="center"
                    android:textColor="@color/primary_blue"
                    android:background="@drawable/blue_border_bg_conner_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:text="支付费用"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15px"
                    android:background="@drawable/arrow_left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="0.6"
                    android:layout_marginVertical="20px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_border_stroke"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="20px"
                        android:text="1.洗涤类别"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="20px"
                        android:text="2.洗涤数量"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="20px"
                        android:text="3.取件地址"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_marginVertical="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="30px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20px"
                    android:background="@drawable/bg_border_stroke"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="left"
                        android:textSize="20px"
                        android:text="1.100%rmb"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="left"
                        android:textSize="20px"
                        android:text="2.80%rmb + 20%token"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="left"
                        android:textSize="20px"
                        android:text="3.线下支付"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_weight="1"
                android:textSize="15px"
                android:gravity="center"
                android:textColor="@color/primary_blue"
                android:background="@drawable/blue_border_bg_conner_shape"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:text="上门取件"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15px"
                android:background="@drawable/arrow"/>
            <Button
                android:layout_weight="1"
                android:textSize="15px"
                android:gravity="center"
                android:textColor="@color/primary_blue"
                android:background="@drawable/blue_border_bg_conner_shape"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:text="洗涤完成"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15px"
                android:background="@drawable/arrow"/>
            <Button
                android:layout_weight="1"
                android:textSize="15px"
                android:gravity="center"
                android:textColor="@color/primary_blue"
                android:background="@drawable/blue_border_bg_conner_shape"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:text="收获"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15px"
                android:background="@drawable/arrow"/>
            <Button
                android:layout_weight="1"
                android:textSize="15px"
                android:gravity="center"
                android:textColor="@color/primary_blue"
                android:background="@drawable/blue_border_bg_conner_shape"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:text="确认完成"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
