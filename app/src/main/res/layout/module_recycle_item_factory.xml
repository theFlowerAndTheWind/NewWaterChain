<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/MyPadding"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:src="@drawable/ic_launcher"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/view_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_service_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务范围:"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_gray"/>
        <TextView
            android:layout_below="@id/tv_service_area"
            android:id="@+id/tv_serivces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="业务范围:"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_gray"/>
        <TextView
            android:layout_below="@+id/tv_serivces"
            android:id="@+id/tv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="节水95%，专业洗涤"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_gray"/>
        <Button
            android:id="@+id/btn_see_detail"
            android:layout_width="400px"
            android:layout_height="100px"
            android:background="@drawable/btn_bg_selector"
            android:text="查看服务选项"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/small_btn_text_size"/>
    </RelativeLayout>



</LinearLayout>
