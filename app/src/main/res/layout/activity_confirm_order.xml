<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/module_include_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/PaddinLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="89px">

                    <TextView
                        android:id="@+id/tv_factory_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="深圳洗涤企业A"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_edt" />

                    <ImageButton
                        android:id="@+id/btn_go_factory_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_go_to" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_width"
                    android:background="@color/divider_gray" />

                <LinearLayout
                    style="@style/PaddinLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="19px"
                    android:paddingBottom="40px">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="0px"
                        android:layout_height="190px"
                        android:layout_weight="1"
                        android:minWidth="294px"
                        android:src="@drawable/ic_default_image" />

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="34px"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_service_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="酒店布草洗涤"
                            android:textColor="@color/text_black"
                            android:textSize="22px" />

                        <TextView
                            android:id="@+id/tv_services_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@id/tv_service_title"
                            android:layout_marginTop="21px"
                            android:text="专业技术，节水95%，不用洗涤剂，不产生污染，已经在推广"
                            android:textColor="@color/text_gray"
                            android:textSize="18px" />

                        <!--<Button-->
                        <!--android:id="@+id/btn_see_detail"-->
                        <!--android:layout_width="500px"-->
                        <!--android:layout_height="100px"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--android:background="@drawable/btn_blue_bg_selector"-->
                        <!--android:text="立即下单"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:textSize="@dimen/small_btn_text_size" />-->
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_space_gray"
                android:background="@color/space_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/style_txt_confirm_order1"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/commit_btn_height"
                    android:text="洗涤需求" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_width"
                    android:background="@color/divider_gray" />

                <RelativeLayout
                    android:id="@+id/wash_demand_rl"
                    style="@style/PaddinLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/commit_btn_height"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/wash_detail_tv"
                        android:gravity="center_vertical"
                        style="@style/style_txt_confirm_order2"
                        android:layout_centerVertical="true"
                        android:text="选择洗涤需求" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/wash_detail_count"
                            style="@style/style_txt_confirm_order2"
                            android:layout_centerVertical="true" />

                        <ImageButton
                            android:id="@+id/btn_go_services_counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:background="@drawable/ic_go_to" />

                    </LinearLayout>


                    <!--<TextView-->
                    <!--android:id="@+id/tv_jian"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_toLeftOf="@+id/btn_go_services_counter"-->
                    <!--android:text="件"-->
                    <!--android:textColor="@color/text_gray"-->
                    <!--android:textSize="14sp" />-->

                    <!--<TextView-->
                    <!--android:id="@+id/tv_counter"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_toLeftOf="@+id/tv_jian"-->
                    <!--android:text="1987"-->
                    <!--android:textColor="@color/text_gray"-->
                    <!--android:textSize="14sp" />-->

                    <!--<TextView-->
                    <!--android:id="@+id/tv_gong"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_toLeftOf="@+id/tv_counter"-->
                    <!--android:text="共"-->
                    <!--android:textColor="@color/text_gray"-->
                    <!--android:textSize="14sp" />-->

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_space_gray"
                android:background="@color/space_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/style_txt_confirm_order1"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/commit_btn_height"
                    android:text="配送信息" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_width"
                    android:background="@color/divider_gray" />

                <RelativeLayout
                    android:id="@+id/wash_delivery_rl"
                    style="@style/PaddinLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/commit_btn_height"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/style_txt_confirm_order2"
                        android:layout_centerVertical="true"
                        android:text="选择配送信息" />

                    <ImageButton
                        android:id="@+id/btn_go_distribution_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_go_to" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_space_gray"
                android:background="@color/space_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/style_txt_confirm_order1"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/commit_btn_height"
                    android:text="支付方式" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_width"
                    android:background="@color/divider_gray" />

                <RelativeLayout
                    android:id="@+id/fullPayment"
                    style="@style/MarginLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/commit_btn_height">


                    <TextView
                        style="@style/style_txt_confirm_order2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全额支付"
                        android:textColor="@color/text_black" />

                    <ImageView
                        android:id="@+id/img_pay_cate_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:src="@drawable/check_mark_blue" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_width"
                    android:background="@color/divider_gray" />

                <RelativeLayout
                    android:id="@+id/combinedPayment"
                    style="@style/PaddinLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/commit_btn_height">

                    <TextView
                        android:id="@+id/tv_pay_cate_2"
                        style="@style/style_txt_confirm_order2"
                        android:layout_centerVertical="true"
                        android:text="组合支付"
                        android:textColor="@color/text_black" />

                    <ImageView
                        android:id="@+id/img_warning"
                        android:layout_width="25px"
                        android:layout_height="25px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="90px"
                        android:layout_toRightOf="@+id/tv_pay_cate_2"
                        android:src="@drawable/ic_warnning" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_warning"
                        android:text="组合支付（80%金额+20%JSL）"
                        android:textColor="@color/text_gray"
                        android:textSize="18px" />

                    <ImageView
                        android:id="@+id/img_pay_cate_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:src="@drawable/check_mark_blue" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_space_gray"
                android:background="@color/space_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/style_txt_confirm_order1"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/commit_btn_height"
                    android:text="支付渠道" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_width"
                    android:background="@color/divider_gray" />

                <RelativeLayout
                    android:id="@+id/pay_channel_wx_rl"
                    style="@style/MarginLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/commit_btn_height">


                    <ImageView
                        android:id="@+id/img_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wx" />

                    <TextView
                        android:layout_toRightOf="@+id/img_wx"
                        style="@style/style_txt_confirm_order2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="0px"
                        android:layout_marginLeft="15px"
                        android:text="微信支付"
                        android:textColor="@color/text_black" />
                    <ImageView
                        android:id="@+id/payChannel_wx"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/check_mark_blue" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_width"
                    android:background="@color/divider_gray" />

                <RelativeLayout
                    android:id="@+id/pay_channel_zfb_rl"
                    style="@style/MarginLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/commit_btn_height">


                    <ImageView
                        android:id="@+id/img_zfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/zfb" />

                    <TextView
                        android:layout_toRightOf="@+id/img_zfb"
                        style="@style/style_txt_confirm_order2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="0px"
                        android:layout_marginLeft="15px"
                        android:text="支付宝支付"
                        android:textColor="@color/text_black" />
                    <ImageView
                        android:id="@+id/payChannel_zfb"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/check_mark_blue" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/PaddinLeftRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="110px"
                android:background="#F0EFF5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:theme="@style/MyCheckBox" />

                <TextView
                    android:id="@+id/tv_readed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_invitation"
                    android:layout_alignBaseline="@id/cb_agreement"
                    android:layout_toRightOf="@id/cb_agreement"
                    android:text="我已阅读并同意"
                    android:textColor="@color/text_gray"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_readed"
                    android:text="@string/agreement"
                    android:textColor="@color/primary_blue"
                    android:textSize="24px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/create_order_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commit_btn_height">

                <Button
                    android:id="@+id/order_detail"
                    style="@style/PaddinLeftRight"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:text="￥0.00"
                    android:textColor="@color/actionsheet_red"
                    android:textSize="@dimen/text_size_commit" />

                <Button
                    android:id="@+id/create_order"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_blue_bg_selector_noconer"
                    android:text="立即下单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_commit" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
