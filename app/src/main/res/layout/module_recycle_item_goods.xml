<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:gravity="center_vertical">

        <TextView
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号" />

        <TextView
            android:id="@+id/tv_order_sn"
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/layout_horizontal_margin"
            android:text="201812262244"
            android:textColor="@color/text_gray" />
    </RelativeLayout>

    <include layout="@layout/module_include_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:gravity="center_vertical">

        <TextView
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称" />

        <TextView
            android:id="@+id/tv_g_name"
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/layout_horizontal_margin"
            android:text="家用净水器"
            android:textColor="@color/text_gray" />
    </RelativeLayout>

    <include layout="@layout/module_include_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:gravity="center_vertical">

        <TextView
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品类型" />

        <TextView
            android:id="@+id/tv_c_name"
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/layout_horizontal_margin"
            android:text="实物商品"
            android:textColor="@color/text_gray" />
    </RelativeLayout>

    <include layout="@layout/module_include_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:gravity="center_vertical">

        <TextView
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额" />

        <TextView
            android:id="@+id/tv_total_price"
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/layout_horizontal_margin"
            android:text="198.00 JSL"
            android:textColor="@color/text_gray" />
    </RelativeLayout>

    <include layout="@layout/module_include_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:gravity="center_vertical">

        <TextView
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换时间" />

        <TextView
            android:id="@+id/tv_createtime"
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/layout_horizontal_margin"
            android:text="2018-12-26 22:48:00"
            android:textColor="@color/text_gray" />
    </RelativeLayout>

    <include layout="@layout/module_include_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:gravity="center_vertical">

        <TextView
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态" />

        <TextView
            android:id="@+id/tv_status_view"
            style="@style/style_txt_confirm_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/layout_horizontal_margin"
            android:text="物流配送中"
            android:textColor="@color/text_gray" />
    </RelativeLayout>

    <View
        android:id="@+id/v_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_space_gray"
        android:background="@color/space_gray"
        android:visibility="visible" />

</LinearLayout>
